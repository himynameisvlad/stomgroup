html, body
  font-size 16px
  line-height 1.2
  font-family 'firasans-light', Helvetica, Arial, sans-serif
html
  height 100vh

body
  min-height 100vh

header, section, footer
  overflow hidden



h1, h2, h3, h4, h5, h6
  font-weight 800


h1
  font-size 42px

h2
  font-size 30px

h3
  font-size 22px


h1, h2, h3, h4, h5, h6, p, ul, ol, blockquote
  margin 0
  padding 0

.bold-text
  font-family 'fira_sansbold', sans-serif


a
  text-decoration none

  color $links-color

  &:hover, &.hover, &:focus
    text-decoration none
    color #00aeef

ul
  clearlist()

input:-webkit-autofill
  -webkit-box-shadow: 0 0 0px 1000px #ededed inset

input[type="text"].form_error
  color red

div.form_error
  display none !important
  opacity 0
  visibility none

textarea
  resize none
textarea:focus, input:focus
  outline 0
input[type="text"], textarea
  background-color #ededed
  border 0
  placeholder-color(#767373)
  rems(13px)


//Buttons

.btn
  border-radius 37px
  font-variant small-caps
  transition color .3s, background-color .3s
  semi-bold()
  rems(16px)

.ghost-btn
  background-color transparent
  color #fff
  box-shadow inset 0 0 0 5px #fff
  &:hover
  &:active
  &:focus
    background-color #fff
    color #06293e
  &.blue
    box-shadow inset 0 0 0 5px #00aeef
    color #00aeef
    &:hover
    &:active
    &:focus
      background-color #00aeef
      color #fff

.white-btn
  background-color #fff
  &:hover
  &:active
  &:focus
    background-color $main-clr
    color #fff


//Buttons end

.blue
  color $main-clr

.starts-with-quote
  margin-left -.4em
